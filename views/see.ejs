<body>
  <header class="header">
    <a href="/" class="logo"></a>
    <nav class="navbar">
      <a href="/">Home</a>
      <a href="/adminprofile">Profile</a>
      <a href="/logout">Logout</a>
    </nav>
  </header>
  <div class="container">
    <div class="tablename">
      <% if (!tablename) { %>
        <p>Loading table names...</p>
        <% } else if (tablename) { %>
          <div>
            <label for="tables">Choose a table:</label>
            <form method="post" action="/see/table" id="tableForm">
              <select id="tables" name="tableName" class="dropdown bg-secondary">
                <% if (table) { %>
                  <option value="<%= table %>">
                    <%= table.toUpperCase() %>
                      <%} %>
                        <% tablename.forEach((tablename)=> { %> <% if ( (table && tablename !=table) || !table) { %>
                  </option>

                  <option value="<%= tablename %>">
                    <%= tablename.toUpperCase() %>
                  </option>
                  <% } %>
                    <% }) %>
              </select>
              <input type="submit" class="showBtn" value="Show Table Data" />
            </form>
          </div>
          <% } %>
    </div>
    <div class="container2">
      <% if (tabledata && tablehead) { %>
        <div class="tablenametext">
          <h1>
            <%= table.toUpperCase() %> Table Data
          </h1>
        </div>
        <table>
          <tr>
            <% tablehead.forEach((column)=> { %>
              <th>
                <%= column.toUpperCase() %>
              </th>
              <% }) %>
          </tr>
          <% tabledata.forEach((row)=> { %>
            <tr>
              <% tablehead.forEach((column)=> { %>
                <td>
                  <%= row[column]%>
                </td>
                <% }) %>
            </tr>
            <% }) %>
        </table>
        <% } %>
    </div>
  </div>
